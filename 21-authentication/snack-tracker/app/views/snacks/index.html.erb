<h1>Snacks#index</h1>

<% if current_user %>
    <h2>Welcome <%= current_user.username %></h2>
    <%= link_to "Logout", logout_path %>
<% else %>
    <%= link_to "Login", login_path %>
<% end %>

<% if current_user %>
    <div>The snacks of <%= current_user.username %></div>
<% end %>
<ul class="my_snacks">
    <% @snacks.each do |snack| %>
        <li><%= link_to snack.name, snack_path(snack) %></li>
    <% end %>
</ul>